# ========================================
# BINANCE API CREDENTIALS
# ========================================
# IMPORTANT: Never commit your real API keys!
# Get your keys from: https://testnet.binancefuture.com/ (for testnet)
# or https://www.binance.com/en/my/settings/api-management (for production)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_USE_TESTNET=true

# Custom Base URL Override for REST & Websocket
BINANCE_FUTURES_REST_URL=https://testnet.binancefuture.com
BINANCE_FUTURES_WS_URL=wss://fstream.binancefuture.com

# ========================================
# TRADING CONFIGURATION
# ========================================
TRADING_PAIRS=BTCUSDT,ETHUSDT,BNBUSDT,SOLUSDT,XRPUSDT,ADAUSDT,DOGEUSDT,AVAXUSDT,LINKUSDT,POLUSDT,LTCUSDT,ATOMUSDT,BCHUSDT,ALGOUSDT,SANDUSDT,MANAUSDT
BASE_BALANCE=100
MIN_LEVERAGE=10
MAX_LEVERAGE=30
RISK_PER_TRADE=0.01

# ========================================
# TRADING STRATEGY & FEE PARAMETERS
# ========================================
EXCHANGE_TAKER_FEE=0.0005
SLIPPAGE_BUFFER=0.0004
MIN_RR_RATIO=0.8

# ========================================
# ENGINE SENSITIVITIES
# (Lower = More Trades, Higher = Safer)
# ========================================
E1_IMBALANCE_THRESHOLD=0.15
E2_MOMENTUM_THRESHOLD=0.55
E4_FUNDING_RATE_THRESHOLD=0.00015

# ========================================
# DECISION ENGINE PREDICTIVE FILTERS
# These gate every potential trade signal.
# Lower values = more trades; higher = stricter.
# ========================================
# Minimum VPIN score to confirm informed trading activity (0-1)
DECISION_VPIN_MIN=0.35
# Minimum |OFI velocity| to confirm momentum building
DECISION_OFI_VELOCITY_MIN=1.5
# Minimum multi-timeframe alignment score (0-1)
DECISION_ALIGNMENT_MIN=0.35

# ========================================
# STRATEGY TRIGGERS
# ========================================
STRAT_MIN_SCORE=0.05
STRAT_AGREEMENT_REQ=1

# Strategy A (Momentum Breakout)
STRATA_V_RAT_TRIGGER=1.5
STRATA_STREAK_TRIGGER=5
STRATA_S_RAT_TRIGGER=1.8

# Strategy B (Mean Reversion)
STRATB_RSI_LOWER=35
STRATB_RSI_UPPER=65

# Strategy C (Liquidation Scalp)
STRATC_LIQ_PROXIMITY=0.40
STRATC_S_RAT_TRIGGER=1.5

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ========================================
# SUPABASE DATABASE
# ========================================
# Get your Supabase URL and key from: https://app.supabase.com/
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
DB_LOG_INTERVAL=300

# ========================================
# TELEGRAM ALERTS (Optional)
# ========================================
# Get bot token from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ========================================
# DASHBOARD
# ========================================
DASHBOARD_SECRET=change_this_password_in_production
